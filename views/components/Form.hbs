{{#if url}}
    <form action="/editar/{{url._id}}" method="post">
        <input value="{{url.origin}}" type="text" placeholder="Ingrese url" name="origin" class="from-control my-3">
        <button type="submit" class="btn btn-warning w-100 mb-2">Editar URL</button>
    </form>

{{else}}
<form action="/" method="post">
    <input type="text" placeholder="Ingrese url" name="origin" class="from-control my-3">
    <button type="submit" class="btn btn-primary w-100 mb-2">Agregar URL</button>
</form>

{{/if}}
